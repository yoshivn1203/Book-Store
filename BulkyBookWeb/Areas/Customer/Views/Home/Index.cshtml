@model IEnumerable<Product>


<!-- Button trigger modal -->

<div class="col-12 text-center">
	<button type="button" class="btn btn-info mt-5" data-bs-toggle="modal" data-bs-target="#exampleModal">
	<i class="fa-solid fa-book"></i> &nbsp &nbsp;How To Use This Website
	</button>
</div>
<!-- Modal -->
<div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">How To Use This Website</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


<div class="row pb-3">
	@foreach(var product in Model)
	{
		<div class="col-lg-3 col-md-6">
			<div class="row p-2 mb-5 mt-5">
				<div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
					<div class="card"    style= "height:700px">
						<img src="@product.ImageUrl" class="card-img-top rounded"/>

						<div class="card-body">
						<div class="pl-1">
							<p class="card-title h5 text-primary">@product.Title</p>
							<p class="card-title text-info">by <b>@product.Author</b></p>
						</div>
						<div class="pl-1">
							<p>List Price: <strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
						</div>
						<div class="pl-1">
							<p>As low as: <b>$@product.Price100.ToString("0.00")</b></p>
						</div>
						</div>
					</div>
					<div>
						<a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@product.Id">
							Details
						</a>
					</div>
				</div> 
			</div>
		</div>
	}
</div>



