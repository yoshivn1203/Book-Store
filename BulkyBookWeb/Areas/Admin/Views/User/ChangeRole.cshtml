@model ApplicationUser




<form method="post">
	<input asp-for="Id" hidden />
	<input asp-for="ConcurrencyStamp" hidden />
	<input asp-for="Email" hidden />
	<input asp-for="Company" hidden />
	<input asp-for="CompanyID" hidden />
	<input asp-for="Email" hidden />
	<input asp-for="NormalizedEmail" hidden />
	<input asp-for="EmailConfirmed" hidden />
	<input asp-for="AccessFailedCount" hidden />
	<input asp-for="UserName" hidden />
	<input asp-for="NormalizedUserName" hidden />
	<input asp-for="PasswordHash" hidden />
	<input asp-for="PasswordHash" hidden />
	<input asp-for="PhoneNumberConfirmed" hidden />
	<input asp-for="TwoFactorEnabled" hidden />
	<input asp-for="LockoutEnabled" hidden />
	<input asp-for="LockoutEnd" hidden />
	<input asp-for="CompanyID" hidden />
	<input asp-for="Company" hidden />
	<input asp-for="RoleList" hidden />
	
	<div class="border p-3 mt-5">
		<div class="row pb-2">
			<h2 class="text-dark">Edit Roles</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>

		</div>

		<div class="mb-3">
			<select asp-for="Role" asp-items="@Model.RoleList" class=form-select>
				<option disabled selected>-Select Role-</option>
			</select>

		</div>
		<div class="mb-3">
			<label asp-for="PhoneNumber"></label>
			<input asp-for="PhoneNumber" class="form-control" />
			<span asp-validation-for="PhoneNumber" class="text-danger"></span>

		</div>

		<div class="mb-3">
			<label asp-for="StreetAddress"></label>
			<input asp-for="StreetAddress" class="form-control" />
			<span asp-validation-for="StreetAddress" class="text-danger"></span>

		</div>
		<div class="mb-3">
			<label asp-for="City"></label>
			<input asp-for="City" class="form-control" />
			<span asp-validation-for="City" class="text-danger"></span>

		</div>
		<div class="mb-3">
			<label asp-for="State"></label>
			<input asp-for="State" class="form-control" />
			<span asp-validation-for="State" class="text-danger"></span>
		</div>


		<div class="mb-3">
			<label asp-for="PostalCode"></label>
			<input asp-for="PostalCode" class="form-control" />
			<span asp-validation-for="PostalCode" class="text-danger"></span>

		</div>
		<button type="submit" class="btn btn-warning btn4" style="width:150px">Update</button>
		<a asp-controller="User" asp-action="Index" class="btn btn-secondary btn4" style="width:170px">
			Back to List
		</a>
	</div>
</form>


@section Scripts{
	@{
	<partial name="_ValidationScriptsPartial" />
	}
}