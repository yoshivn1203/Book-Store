@using BulkyBook.Models
@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<div class ="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class ="text-dark">Cover Type</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-warning btn4">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Cover Type
            </a>
        </div>
    </div>
    <br /> <br />



<table class="table  table-sm" style="width:100%">
    <thread>
        <tr>
            
            <th>
                Cover Type
            </th>
            <th>
                Update Data
            </th>


        </tr>
    </thread>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                
                <td width="60%">
                    @obj.Name
                </td>
                 <td width="30%">
                     
                  @*  <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary btn-sm btn4">
                        <i class="bi bi-pencil-square"></i> &nbsp; Edit
                    </a>*@
                  
                    <a href="/Admin/CoverType/Edit?id=@obj.Id"
                    class="btn btn-warning btn-sm btn4"> <i class="bi bi-pencil-square"></i> &nbsp; Edit </a>

                     @*<a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger btn-sm btn4">
                        <i class="bi bi-trash3"></i> &nbsp; Delete
                    </a>*@
                    <a href="/Admin/CoverType/Delete/@obj.Id"
                    class="btn btn-danger btn-sm btn4"> <i class="bi bi-trash3"></i> &nbsp; Delete </a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>