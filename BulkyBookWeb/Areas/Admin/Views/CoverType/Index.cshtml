@using BulkyBook.Models
@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<div class ="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class ="text-primary">Cover Type</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Cover Type
            </a>
        </div>
    </div>
    <br /> <br />



<table class="table table-bordered table-striped" style="width:100%">
    <thread>
        <tr>
            
            <th>
                Cover Type
            </th>
        </tr>
    </thread>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                
                <td width="60%">
                    @obj.Name
                </td>
                 <td width="30%">
                     
                    <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary btn-sm">
                        <i class="bi bi-pencil-square"></i> &nbsp; Edit
                    </a>
                     <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash3"></i> &nbsp; Delete
                    </a>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
</div>