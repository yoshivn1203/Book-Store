@using BulkyBook.Models
@model CoverType

<form method="post">
	<div class="border p-3 mt-5">
		<div class="row pb-2">
			<h2 class="text-dark">Edit Cover Type</h2>
			<hr />
		</div>
		@*<div asp-validation-summary=All></div>*@
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		
		<button type="submit" class="btn btn-warning btn4" style="width:150px">Update</button>
		<a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary btn4" style="width:170px">
			Back to List
		</a>	
	</div>
</form>

@section Scripts{
	@{
	<partial name="_ValidationScriptsPartial"/>
	}
}