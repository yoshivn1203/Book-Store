@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class ="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class ="text-dark">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-warning btn4">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br /> <br />



<table id="tblData" class="display" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>Update Data</th>
        </tr>
    </thead>
   
</table>
</div>


@section Scripts{
<script src="/js/category.js"></script>

}